# --- REMOTE DEPLOYMENT MANAGER CONFIG ---

# Hedef Sunucu SSH Ayarları (Production)
SSH_PRIVATE_KEY_PATH=/home/user/.ssh/id_rsa
SSH_PORT=22
SSH_TIMEOUT=10

# Güvenlik ve Şifreleme (Vault)
VAULT_SECRET_KEY=change_me_super_secret_key_here
ENABLE_AUDIT_LOGGING=True

# Bildirim Ayarları (Opsiyonel)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy
EMAIL_ALERT_TO=admin@company.com

# Veritabanı (Deployment Geçmişi İçin)
DB_CONNECTION_STRING=sqlite:///deployments.db
